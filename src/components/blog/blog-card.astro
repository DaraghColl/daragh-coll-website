---
import { type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

const { slug, data } = Astro.props as CollectionEntry<'blog'>;
const { title, description, pubDate, image } = data;
---

<article class="flex flex-col">
	<Image
		src={image}
		width={600}
		height={600}
		alt={title}
		format="webp"
		loading="eager"
		class="w-full rounded-md border border-white object-cover"
	/>
	<div class="group relative">
		<h3 class="mt-3 text-lg font-semibold leading-6 text-white group-hover:text-gray-200">
			<a href={`/blog/${slug}`}>
				{title}
			</a>
		</h3>
		<p class="mt-5 text-sm leading-6 text-gray-400">
			{description}
		</p>
		<time datetime="2020-02-12" class="mt-10 text-xs text-white">
			{pubDate}
		</time>
	</div>
</article>
