---
import { Image } from 'astro:assets';

export interface Props {
	title: string;
	job: string;
	description: string;
	date: string;
	tech: string[];
}

const { title, job, description, date, tech } = Astro.props as Props;
---

<div
	class="max-h-sm flex flex-col gap-4 rounded bg-white shadow-lg md:flex-row"
	data-animate="lift"
	data-animate-delay="0.25"
>
	<div class="flex flex-col justify-center gap-4 px-6 py-4">
		<h3 class="text-xl font-bold">{title}</h3>
		<span>{date}</span>
		<hr />
		<h3 class="text-xl font-bold">{job}</h3>
		<p class="font-normal tracking-tight text-gray-500">
			{description}
		</p>
		<div>
			{
				tech.map((techItem) => {
					return (
						<div class="mb-2 mr-2 inline-block rounded bg-gray-900 px-3 py-1 text-sm font-normal text-white">
							{techItem}
						</div>
					);
				})
			}
		</div>
	</div>
</div>
