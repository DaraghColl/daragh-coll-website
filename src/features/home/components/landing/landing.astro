---
import LadIcon from '../../../../components/lad-icon/lad-icon.astro';
import Social from './social.astro';
import Actions from './actions.astro';
---

<div
	id="section_landing"
	class="height-full-smallest landing landing relative grid place-content-center overflow-hidden bg-gray-950"
>
	<div class="container-sm z-20 grid justify-center">
		<div>
			<div class="flex items-center gap-4">
				<h1 class="text-5xl font-bold tracking-tight text-white md:text-6xl">Hi, Iâ€™m Daragh</h1>
				<div
					data-animate="fade-in"
					data-animate-delay="0.7"
					class="translate-y-2 pb-1 opacity-0 transition-all duration-1000 ease-in-out"
				>
					<LadIcon id="landing_lad" variant="wave" color="#6366f1" height="3rem" width="3rem" />
				</div>
			</div>
			<h2 class="mt-4 text-3xl font-bold tracking-tight text-white md:text-4xl">
				Welcome to my website
			</h2>
			<h3 class="mt-8 max-w-xl text-2xl font-semibold tracking-tight text-gray-400">
				I am a fullstack developer, specialising in front end development. I like to design, code
				and <span class="animated-text">animate</span>.
			</h3>
		</div>
		<Actions />
		<Social />
	</div>
	<div
		class="gradient-element absolute -top-40 left-[30%] z-10 h-3/4 w-40 -rotate-45 rounded-full bg-gradient-to-r from-indigo-600 to-violet-500 opacity-60 blur-3xl"
	>
	</div>
</div>

<style>
	.animated-text {
		--bg-size: 400%;
		--color-one: #6366f1;
		--color-two: #fbcfe8;
		background: linear-gradient(90deg, var(--color-one), var(--color-two), var(--color-one)) 0 0 /
			var(--bg-size) 100%;
		color: transparent;
		background-clip: text;
		-webkit-background-clip: text;
		animation: move-bg 8s infinite linear;
	}

	@media (prefers-reduced-motion: no-preference) {
		.animated-text {
			animation: move-bg 8s linear infinite;
		}
		@keyframes move-bg {
			to {
				background-position: var(--bg-size) 0;
			}
		}
	}

	.gradient-element {
		animation: breath 5s infinite linear;
	}
	@keyframes breath {
		0% {
			scale: 1;
		}
		50% {
			scale: 1.5;
		}
		100% {
			scale: 1;
		}
	}
</style>
