---
import { Image } from 'astro:assets';

export interface Props {
	title: string;
	description: string;
	image: any;
	tech: string[];
}

const { title, description, image, tech } = Astro.props as Props;
---

<div
	class="max-h-sm flex flex-col gap-4 rounded bg-white shadow-lg md:flex-row"
	data-animate="lift"
	data-animate-delay="0.25"
>
	<Image
		src={image}
		width={1024}
		height={1024 / 1.5}
		alt={title}
		format="webp"
		loading="eager"
		class="w-full rounded-tl-md rounded-tr-md md:w-1/2 md:rounded-bl-md md:rounded-tl-md md:rounded-tr-none"
	/>
	<div class="flex flex-col justify-center gap-4 px-6 py-4">
		<h3 class="text-xl font-bold">{title}</h3>
		<p class="font-normal tracking-tight text-gray-500">
			{description}
		</p>
		<div>
			{
				tech.map((techItem) => {
					return (
						<div class="mb-2 mr-2 inline-block rounded bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700">
							{techItem}
						</div>
					);
				})
			}
		</div>

		<div class="flex gap-2">
			<a
				href="#"
				class="text-md flex cursor-pointer items-center gap-2 rounded bg-gray-900 px-3.5 py-2.5 font-semibold text-white shadow-sm transition ease-in-out hover:bg-indigo-500"
			>
				Code
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="h-4 w-4"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"></path>
				</svg>
			</a>
			<a
				href="#"
				class="flex cursor-pointer items-center gap-2 rounded bg-gray-900 px-3.5 py-2.5 text-sm text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
			>
				Demo
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="h-4 w-4"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
					></path>
				</svg>
			</a>
		</div>
	</div>
</div>
